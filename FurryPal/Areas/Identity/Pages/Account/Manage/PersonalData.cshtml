@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="container m-5">
    <h6>Your account contains personal data that you have given us. This page allows you to download or delete that data.</h6>
    <h6>
        <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
    </h6>
    <form asp-page="DownloadPersonalData" method="post" class="form-group">
        <p class="text-center">
            <button class="btn btn-primary" type="submit">Download</button> 
        </p>
    </form>
    <p class="text-center">
        <a asp-page="DeletePersonalData" class="btn btn-primary">Delete</a>
    </p>
    <div class="text-center">
        <button onclick="window.history.back()" class="btn btn-primary">Cancel</button>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}