
@model FurryPal.Web.Areas.Admin.ViewModels.Products.ProductBindingModel

@{
    ViewData["Title"] = "Create Product";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="container">
    <div class="rmx-auto half-width">
        <form asp-area="Admin" asp-controller="Products" asp-action="CreateProduct" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ProductCode"></label>
                        <input asp-for="ProductCode" class="form-control"/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control"/>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control"/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Category"></label>
                        <select class="form-control" asp-for="Category" asp-items="Model.Categories"></select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Manufacturer"></label>
                        <select class="form-control" asp-for="Manufacturer" asp-items="Model.Manufacturers"></select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Price"></label>
                        <input type="number" min="1" step="0.01" asp-for="Price" class="form-control"/>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="StockQuantity"></label>
                        <input type="number" asp-for="StockQuantity" class="form-control"/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ImageUrl"></label>
                        <input type="url" asp-for="ImageUrl" class="form-control"/>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Keywords"></label>
                        <textarea asp-for="Keywords" class="form-control"></textarea>
                    </div>
                </div>
                <div class="col-md-6">
                    <fieldset class="form-group">
                        <label asp-for="IsAvailableForAutoShipping"></label>
                        <div class="mt-2">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" id="IsAvailableForAutoShippingYes" asp-for="IsAvailableForAutoShipping" type="radio" value="true"/>
                                <label class="form-check-label" for="IsAvailableForAutoShippingYes">Yes</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" id="IsAvailableForAutoShippingNo" asp-for="IsAvailableForAutoShipping" type="radio" value="false"/>
                                <label class="form-check-label" for="IsAvailableForAutoShippingNo">No</label>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary"><b>+</b> Add</button>
            </div>
        </form>
        <div class="form-group text-center">
            <button onclick="window.history.back()" class="btn btn-primary">Cancel</button>
        </div>
    </div>
</div>