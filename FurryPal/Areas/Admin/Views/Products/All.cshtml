@model IEnumerable<FurryPal.Web.Areas.Admin.ViewModels.Products.AllProductsViewModel>

@{
    ViewData["Title"] = "All Products";
    var index = 1;
}

<h2 class="text-center">@ViewData["Title"]</h2>

<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">ProductCode</th>
        <th scope="col">Name</th>
        <th scope="col">Category</th>
        <th scope="col">Manufacturer</th>
        <th scope="col">Price</th>
        <th scope="col">StQ</th>
        <th scope="col">Image</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
    </tr>
    </thead>
    <tbody>


    @foreach (var product in @Model)
    {
        <tr>
            <th scope="row">@index</th>
            <td>@product.ProductCode</td>
            <td>@product.Name</td>
            <td>@product.CategoryName</td>
            <td>@product.ManufacturerName</td>
            <td>â‚¬ @product.Price</td>
            <td>@product.StockQuantity</td>
            <td>
                <img src="@product.ImageUrl" class="img-thumbnail" alt="@product.Name" width="304" height="236">
            </td>

            <td>
                <a asp-action="EditProduct" asp-controller="Products" asp-route-id="@product.Id">E</a>
            </td>
            <td>
                <a asp-action="DeleteProduct" asp-controller="Products" asp-route-id="@product.Id">X</a>
            </td>
        </tr>

        index++;
    }
    </tbody>
</table>