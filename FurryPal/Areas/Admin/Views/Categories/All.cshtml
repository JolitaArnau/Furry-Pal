@model IEnumerable<FurryPal.Web.Areas.Admin.ViewModels.Categories.AllCategoriesViewModel>

@{
    ViewData["Title"] = "All Categories";
}

@{
    var index = 1;
}

<h2 class="text-center">@ViewData["Title"]</h2>

<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
    </tr>
    </thead>
    <tbody>

    @foreach (var category in @Model)
    {
        <tr>
            <th scope="row">@index</th>
            <td>@category.Name</td>
            <td>@category.Description</td>
            <td><a asp-action="EditCategory" asp-controller="Categories" asp-route-id="@category.Id">E</a></td>
            <td><a asp-action="DeleteCategory" asp-controller="Categories" asp-route-id="@category.Id">X</a></td>
        </tr>

        index++;
    }
    </tbody>
</table>