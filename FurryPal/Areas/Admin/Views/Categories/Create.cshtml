@model FurryPal.Web.Areas.Admin.ViewModels.Categories.CreateViewModel

@{
    ViewData["Title"] = "Create Category";
    Layout = "_AdminLayout";
}


<h2 class="text-center">@ViewData["Title"]</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <section>
                <form asp-area="Admin" asp-controller="Categories" asp-action="CreateCategory" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control"/>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary"><b>+</b> Category</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
