@model IEnumerable<FurryPal.Web.ViewModels.Products.ProductOverviewViewModel>

@{
    ViewData["Title"] = "Bowls";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="container-fluid product-card">
    <section>
        <div>
            <div class="row justify-content-center">
                @foreach (var product in @Model)
                {
                    <div class="card">
                        <img class="card-img-top" src="@product.ImageUrl" alt="@product.Name">
                        <div class="card-body">
                            <h4 class="card-title">@product.Name</h4>
                            <p class="card-text">@product.ManufacturerName</p>
                            <b>
                                <p class="card-text">@product.Price â‚¬</p>
                            </b>
                            <br/>
                            <button class="btn" id="bowls-btn">
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">Details</a>
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>
<div class="form-group text-center">
    <button onclick="window.history.back()" class="btn btn-primary">Back</button>
</div>

