@model FurryPal.Web.ViewModels.Checkout.UserCheckoutBindingModel
@{
    ViewData["Title"] = "Check Out";
}


<h2 class="text-center">@ViewData["Title"]</h2>

<div class="container m-5">
    <div class="row">
        <div class="col-md-6" style="border: 2px solid #f9f9f9;">
            <form method="post">
                <h4>Your Shipping Address</h4>
                <div class="form-group">
                    <label asp-for="CountryName"></label>
                    <input asp-for="CountryName" value="@Model.CountryName" class="form-control" disabled="disabled"/>
                </div>
                <div class="form-group">
                    <label asp-for="CityName"></label>
                    <input asp-for="CityName" value="@Model.CityName" class="form-control" disabled="disabled"/>
                </div>
                <div class="form-group">
                    <label asp-for="ZipCode"></label>
                    <input asp-for="ZipCode" value="@Model.ZipCode" class="form-control" disabled="disabled"/>
                </div>
                <div class="form-group">
                    <label asp-for="StreetName"></label>
                    <input asp-for="StreetName" value="@Model.StreetName" class="form-control" disabled="disabled"/>
                </div>
                <div class="form-group">
                    <label asp-for="HouseNumber"></label>
                    <input asp-for="CountryName" value="@Model.HouseNumber" class="form-control" disabled="disabled"/>
                </div>
            </form>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-4" style="border: 2px solid #f9f9f9;">
            <h4>Your Order</h4>
            @foreach (var products in @Model.Purchases.Select(x => x.Products))
            {
                foreach (var product in products)
                {
                    <ul style="list-style: none">

                        <li>@product.Name</li>
                        <li>@product.Price</li>
                        <li>
                            <img class="img-thumbnail" width="200em" height="400em" alt="product-img" src="@product.ImageUrl"/>
                        </li>

                    </ul>
                }
            }
        </div>

        <div class="text-center">
            <button class="btn btn-primary">
                <a asp-controller="CheckOut" asp-action="ThankYou">Buy</a>
            </button>
        </div>
    </div>
</div>



