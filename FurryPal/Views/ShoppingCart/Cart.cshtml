@model FurryPal.Web.ViewModels.Cart.ShoppingCartViewModel

<div class="row">
    <h2>Your shopping cart</h2>
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Selected amount</th>
            <th>Drink</th>
            <th class="text-right">Price</th>
            <th class="text-right">Subtotal</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
        {
            <tr>
                <td class="text-center">@line.Quantity</td>
                <td class="text-left">@line.Product.Name</td>
                <td class="text-right">@line.Product.Price.ToString("c")</td>
                <td class="text-right">
                    @((line.Quantity * line.Product.Price).ToString("c"))
                </td>
                <td class="text-center">
                    <a class="glyphicon glyphicon-remove text-danger remove" asp-controller="ShoppingCart"
                       asp-action="Remove" asp-route-drinkId="@line.Product.Id">
                    </a>
                </td>
            </tr>
        }
        </tbody>
        <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td class="text-right">
                @Model.ShoppingCartTotal.ToString("c")
            </td>
        </tr>
        </tfoot>
    </table>

    <div class="text-right">
        <div class="btn-group ">
            <a class="btn btn-success">Check out</a>
        </div>
    </div>
</div>

